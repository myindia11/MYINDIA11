<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BottomNavigation.MyConnections"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F4F4F4"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_black">
    </androidx.appcompat.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:background="#F4F4F4"
            android:layout_gravity="top"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Together, we`re\ngoing further!"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:textColor="@color/black"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_back"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I refer now!"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refer and grow your connections \nfor more rewards."
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <RelativeLayout
                    android:elevation="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:shadowColor="@android:color/darker_gray"
                    android:layout_margin="5dp"
                    android:background="@drawable/edt_bck">
                    <EditText
                        android:id="@+id/email_id"
                        android:layout_width="fill_parent"
                        android:layout_height="45dp"
                        android:padding="5dp"
                        android:inputType="textEmailAddress"
                        android:background="@drawable/edt_bck"
                        android:hint="Email id"
                        android:fontFamily="@font/open_sans"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="#919191"/>

                    <ImageView
                        android:id="@+id/sendEmail"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="5dp"
                        android:alpha=".5"
                        android:padding="5dp"
                        android:src="@drawable/ic_baseline_send_24"
                        tools:ignore="ContentDescription"/>
                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanks to you,\nthe community is growing!"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            android:layout_gravity="center|start"/>
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:id="@+id/groups"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/splash_back"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_baseline_group_24"
                    android:text="Groups"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F4F4F4"
        android:layout_marginTop="5dp">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/connectionRecycler"
        android:layout_gravity="top"/>
        <LinearLayout
            android:id="@+id/no_tag_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/no_referral_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:text="No connections yet."
                android:textSize="16sp"
                android:fontFamily="@font/open_sans"/>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorEnd"
            android:layout_gravity="bottom|right"
            android:layout_margin="15dp"
            android:src="@drawable/create_group_icon"/>
    </FrameLayout>



</LinearLayout>