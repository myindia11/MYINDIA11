<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartingActivity.Signup"
    android:background="@color/white"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <!--<ImageView
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:src="@drawable/myindia_11_full_logo"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"/> -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign up &amp; get Rs.100 Bonus Cash"
                        android:layout_gravity="center"
                        android:textSize="22sp"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play more, Win more"
                        android:layout_gravity="center"
                        android:textSize="15sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:layout_marginTop="2dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="10dp">
                        <EditText
                            android:id="@+id/referral"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Refferal code (Optional)"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:inputType="textCapCharacters"
                            android:textColorHint="@color/colorEnd"/>
                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Name"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:inputType="text"
                            android:textColorHint="@color/colorEnd"/>
                        <EditText
                            android:id="@+id/nickName"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Username"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:inputType="text"
                            android:textColorHint="@color/colorEnd"/>
                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Email"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:inputType="textEmailAddress"
                            android:textColorHint="@color/colorEnd"/>
                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Mobile number"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:inputType="number"
                            android:textColorHint="@color/colorEnd"/>
                        <EditText
                            android:id="@+id/password"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edt2_bck"
                            android:hint="Password"
                            android:padding="10dp"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:textColorHint="@color/colorEnd"
                            android:inputType="textPassword"/>
                        <RadioButton
                            android:id="@+id/tc_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/by_registering"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            android:textSize="12sp"/>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp">
                            <LinearLayout
                                android:id="@+id/register"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:background="@drawable/btn_bck_new"
                                android:layout_margin="10dp"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Create your account"
                                    android:textAllCaps="true"
                                    android:fontFamily="@font/open_sans"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:gravity="center"/>
                            </LinearLayout>
                            <com.github.ybq.android.spinkit.SpinKitView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/loading"
                                style="@style/SpinKitView.Circle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                app:SpinKit_Color="@color/white"
                                android:layout_margin="5dp"
                                android:visibility="gone"/>
                        </FrameLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Existing user? "
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/login"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login here.."
                            android:textColor="@color/colorEnd"
                            android:fontFamily="@font/open_sans_semibold"
                            android:layout_marginStart="5dp"
                            android:drawableEnd="@drawable/ic_baseline_double_arrow_24"
                            android:gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to read Terms &amp; Condition"
                        android:textColor="@color/colorEnd"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/bonus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="10sp"/>



                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="bottom">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FROM"
                            android:layout_gravity="center|bottom"
                            android:textSize="12sp"
                            android:fontFamily="@font/open_sans_light"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cephnox Technologies Pvt. Ltd."
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="15dp"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:gravity="center"/>
                    </LinearLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>