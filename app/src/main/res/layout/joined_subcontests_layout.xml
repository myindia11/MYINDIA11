<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:gravity="center|start">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/trophy_colorful"
                            android:layout_marginStart="5dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prize Pool"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_gravity="start"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/prize_pool"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.1000"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:layout_gravity="start|center"
                            android:textSize="15sp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_column="3"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entry Fee"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_light"
                            android:layout_gravity="end"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/entry_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.1000"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans_semibold"
                            android:layout_gravity="end|center"
                            android:textSize="15sp"/>

                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_marginTop="4dp">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_column="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:id="@+id/league_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="League Type"
                            android:layout_marginEnd="10dp"
                            android:textSize="14sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_gravity="center|start"/>
                        <TextView
                            android:id="@+id/tid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TID"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center|start"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:layout_column="2"
                        android:gravity="center|end">
                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:background="@drawable/onboard_back"
                            android:gravity="center"
                            android:elevation="4dp"
                            android:orientation="vertical"
                            android:layout_marginEnd="5dp">
                            <TextView
                                android:id="@+id/join_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Joined"
                                android:textSize="14sp"
                                android:fontFamily="@font/open_sans_semibold"
                                android:textColor="@color/white"/>
                        </LinearLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>