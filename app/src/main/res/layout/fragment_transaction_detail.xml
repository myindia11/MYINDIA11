<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoneyRelatedLayouts.TransactionDetail"
    android:background="@color/white"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F4F4F4"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_black">
        <ImageView
            android:id="@+id/share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_share_24_black"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:background="#F4F4F4">
        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction type"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/open_sans"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.100"
                android:textSize="32sp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/open_sans_light"
                android:textColor="@color/black"
                android:layout_gravity="center|start"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/green_tick_icon"
                android:layout_gravity="center|end"/>

        </FrameLayout>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="#353535"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/open_sans_light"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
        <TextView
            android:id="@+id/mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_marginTop="2dp"/>
        <ImageView
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/barcode_icon"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/tid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890123"
            android:textSize="15sp"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help?"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans_light"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/send_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="support@myindia11.in"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#007DE1"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
    </LinearLayout>


</LinearLayout>