<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoneyRelatedLayouts.AddAccount"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Bank Details"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="15dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/sp_bck">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_box_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Account Holder Name"
                    android:padding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textPersonName"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/bname"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_box_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Bank Name"
                    android:padding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/acn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_box_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Account Number"
                    android:padding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/cacn"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_box_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="Confirm Account Number"
                    android:padding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/ifs"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_box_back"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:hint="IFSC"
                    android:padding="10dp"
                    android:fontFamily="@font/open_sans"
                    android:inputType="textCapCharacters"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#34e97005"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter MIPIN"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"/>

                <com.chaos.view.PinView
                    android:id="@+id/pin_view"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:cursorVisible="true"
                    android:inputType="number"
                    android:itemBackground="#FFFFFF"
                    app:cursorColor="@color/colorEnd"
                    app:hideLineWhenFilled="true"
                    app:itemCount="4"
                    app:itemHeight="40dp"
                    app:itemRadius="5dp"
                    app:itemWidth="40dp"
                    app:lineColor="@color/colorStart"
                    app:lineWidth="1dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want to change MIPIN go to Settings > Change MIPIN"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/open_sans_light"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            <LinearLayout
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/onboard_back"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Account"
                    android:textAllCaps="false"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/loading"
                style="@style/SpinKitView.Circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorStart"
                android:layout_margin="5dp"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>