<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TossPrediction.PredictToss"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <TextView
            android:id="@+id/contestsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your team"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/splash_back"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/trap_bck"
                android:gravity="center">
                <TextView
                    android:id="@+id/entry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entry Fee"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textAllCaps="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="10dp"
                android:background="@drawable/note_back"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select team who is going to win toss"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:fontFamily="@font/open_sans"
                    android:textAllCaps="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_weight="0.8"
                            android:layout_column="1">
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/team_one_tick"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/green_tick"
                                android:layout_gravity="center|top|right"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="5dp"
                                app:cardBackgroundColor="@color/white"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="5dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/team_one_logo"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/hydrabad"
                                        android:layout_gravity="center"/>
                                </FrameLayout>


                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/team_one"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T-One"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|bottom"/>

                        </FrameLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_weight="1.4"
                            android:layout_column="2"
                            android:gravity="center">
                            <LinearLayout
                                android:layout_width="150dp"
                                android:layout_height="40dp"
                                android:background="@drawable/logo_back"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/confirm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Confirm"
                                    android:textAllCaps="true"
                                    android:textSize="14sp"
                                    android:fontFamily="@font/open_sans"
                                    android:textColor="@color/white"/>

                            </LinearLayout>
                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="75dp"
                            android:layout_weight="0.8"
                            android:layout_column="1">
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/team_two_tick"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/green_tick"
                                android:layout_gravity="center|top|left"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                app:cardCornerRadius="5dp"
                                app:cardBackgroundColor="@color/white"
                                android:layout_gravity="center|top"
                                android:layout_marginTop="5dp">
                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:id="@+id/team_two_logo"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:src="@drawable/bangalore"
                                        android:layout_gravity="center"/>
                                </FrameLayout>


                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/team_two"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T-Two"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:layout_marginTop="2dp"
                                android:layout_gravity="center|bottom"/>

                        </FrameLayout>

                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="#F8F8F8">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selected Team"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/open_sans"
            android:textAllCaps="false"
            android:layout_gravity="center|top"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/selected_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_semibold"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"/>
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note*: Once you have selected any team and clicked on confirmed button later on you will not be able to change you selection."
        android:justificationMode="inter_word"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/open_sans_light"
        android:textAllCaps="false"
        android:layout_gravity="center|top"
        android:layout_margin="15dp"/>



</LinearLayout>