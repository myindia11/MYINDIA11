<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/player_layout">
    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="0.6"
                        android:layout_column="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:cardCornerRadius="25dp"
                            android:id="@+id/back_card"
                            android:layout_gravity="center|top"
                            app:cardBackgroundColor="@color/white"
                            android:layout_margin="5dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/identification_img"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@color/white"
                                app:civ_circle_background_color="@color/white"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="55dp"
                            android:layout_height="15dp"
                            app:cardBackgroundColor="@color/colorEnd"
                            app:cardCornerRadius="10dp"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="3dp">
                            <TextView
                                android:id="@+id/team"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Team"
                                android:textSize="8sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_gravity="center"
                                android:background="@color/colorEnd"
                                android:textColor="@color/white"/>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.4"
                        android:layout_column="2"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/player_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Name"
                            android:fontFamily="@font/open_sans_semibold"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="2dp"/>
                        <TextView
                            android:id="@+id/player_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Player Type"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/black"
                            android:textSize="10sp"
                            android:layout_gravity="center|start"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="5dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                app:cardCornerRadius="5dp"
                                android:layout_margin="5dp"
                                app:cardBackgroundColor="#ededed">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginEnd="5dp">
                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/status_indicator"
                                        android:layout_width="10dp"
                                        android:layout_height="10dp"
                                        app:cardBackgroundColor="#FF5722"
                                        app:cardCornerRadius="5dp"
                                        android:layout_gravity="center|start"/>
                                    <TextView
                                        android:id="@+id/player_status"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Not in lineup"
                                        android:textSize="10sp"
                                        android:textColor="#FF5722"
                                        android:fontFamily="@font/open_sans"
                                        android:layout_gravity="center|start"
                                        android:layout_marginStart="5dp"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:id="@+id/sellPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="10sp"
                                android:fontFamily="@font/open_sans"
                                android:layout_gravity="center"
                                android:text="Sell 000%"/>
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_column="3">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:text="000"
                                android:textSize="12sp"
                                android:fontFamily="@font/open_sans"
                                android:textColor="@color/black"
                                android:id="@+id/seriesPoint"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="#FFF9F9"
                                android:layout_gravity="center|end"
                                android:layout_margin="3dp">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/credit_score"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="10.5"
                                        android:textSize="12sp"
                                        android:textColor="@color/black"
                                        android:layout_gravity="center|start"
                                        android:layout_marginStart="5dp"
                                        android:fontFamily="@font/open_sans_semibold"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_gravity="center|end"
                                        app:cardBackgroundColor="@color/colorEnd"
                                        app:cardCornerRadius="10dp"
                                        android:layout_margin="3dp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="C"
                                            android:textSize="10sp"
                                            android:fontFamily="@font/raleway_medium"
                                            android:textColor="@color/white"
                                            android:layout_gravity="center"/>
                                    </androidx.cardview.widget.CardView>
                                </LinearLayout>


                            </androidx.cardview.widget.CardView>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/plus"
                                android:visibility="gone"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/green_selected_btn"
                                android:layout_gravity="center|end"
                                android:layout_marginEnd="5dp"/>
                            <ImageView
                                android:id="@+id/minus"
                                android:visibility="gone"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:src="@drawable/minus_unselected_btn"
                                android:layout_gravity="center|end"
                                android:layout_marginEnd="5dp"/>
                        </FrameLayout>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>