<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ContestsFragments.SelectTeam"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <TextView
            android:id="@+id/contestsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contests Name"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/wallet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/wallet"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:gravity="center">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize Pool"
                        android:textSize="10sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entry Fee"
                        android:textSize="10sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/black"
                        android:layout_gravity="center|end"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/price_pool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.100"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/black"
                        android:layout_gravity="center|start"/>
                    <TextView
                        android:id="@+id/join_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs.10"
                        android:textSize="14sp"
                        android:fontFamily="@font/open_sans"
                        android:textColor="@color/colorEnd"
                        android:layout_gravity="center|end"/>
                </FrameLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/left_spot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize Pool"
                        android:textSize="10sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="#FF5722"
                        android:layout_gravity="center|start"/>
                    <TextView
                        android:id="@+id/amt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prize Pool"
                        android:textSize="10sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/white"
                        android:layout_gravity="center"/>
                    <TextView
                        android:id="@+id/total_spots"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entry Fee"
                        android:textSize="10sp"
                        android:fontFamily="@font/open_sans_light"
                        android:textColor="@color/colorStart"
                        android:layout_gravity="center|end"/>
                </FrameLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="150dp">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/availableTeamsRecycler"/>

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#F4F4F4">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join with"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_light"
                android:textColor="#FF5722"
                android:layout_gravity="center|start"/>
            <TextView
                android:id="@+id/tid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/open_sans"
                android:textColor="#000000"
                android:layout_gravity="center|start"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/join_btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/onboard_back"
            android:layout_gravity="center|end"
            android:layout_marginEnd="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="12sp"/>
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>