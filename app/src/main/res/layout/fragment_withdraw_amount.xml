<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoneyRelatedLayouts.WithdrawAmount"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withdraw Amount"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <TextView
        android:id="@+id/add_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Saved Bank Details"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/open_sans_semibold"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_margin="15dp"
                    app:cardCornerRadius="10dp"
                    android:elevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/bank_card_bck">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp">
                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="40dp"
                                android:src="@drawable/electronic_chip"
                                android:layout_gravity="center|start"
                                android:scaleType="fitXY"/>
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:src="@drawable/myindia_11_full_logo"
                                android:layout_gravity="center|end"/>

                        </FrameLayout>

                        <TextView
                            android:id="@+id/ac_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Account Number"
                            android:textColor="@color/white"
                            android:textSize="22sp" />

                        <TextView
                            android:id="@+id/bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bank Name"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="15dp"/>
                        <TextView
                            android:id="@+id/ifsc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IFSC"
                            android:textSize="15sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="15dp"/>
                        <TextView
                            android:id="@+id/holder_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Account Holder Name"
                            android:textSize="13sp"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/white"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="15dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </FrameLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bank_card_bck">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_baseline_attach_money_24"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Balance"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans"/>
                <TextView
                    android:id="@+id/money_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 0"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
        </FrameLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="15dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/top_strip">
            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_box_back"
                android:layout_margin="20dp"
                android:hint="Enter amount to withdraw"
                android:padding="10dp"
                android:text="0"
                android:textColorHint="@color/white"
                android:fontFamily="@font/open_sans"
                android:inputType="number"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">
        <LinearLayout
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/onboard_back"
            android:layout_margin="10dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit Request"
                android:textAllCaps="false"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loading"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorStart"
            android:layout_margin="5dp"
            android:visibility="gone"/>
    </FrameLayout>
    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: Minimum withdrawal amount should be Rs. 150"
        android:textSize="15sp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>