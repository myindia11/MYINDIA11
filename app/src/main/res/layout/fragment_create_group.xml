<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatGroup.CreateGroup"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Group Identification Number"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/open_sans_light"
                android:layout_gravity="start|center"/>
            <TextView
                android:id="@+id/gid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GIDNUMBER"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/open_sans"
                android:layout_gravity="start|center"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:padding="15dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/group_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:civ_border_width="0.5dp"
            app:civ_circle_background_color="@color/white"
            app:civ_border_color="@color/black"
            android:src="@drawable/profile_pic_temp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/g_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt2_bck"
            android:hint="Group Name"
            android:padding="10dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans"
            android:inputType="text"
            android:textColorHint="@color/colorEnd"
            android:elevation="2dp"
            android:layout_gravity="center|top"/>

    </LinearLayout>
    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edt2_bck"
        android:hint="Group Description"
        android:padding="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:inputType="text"
        android:textColorHint="@color/colorEnd"
        android:elevation="2dp"
        android:layout_gravity="center|top"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="bottom">
        <LinearLayout
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/btn_bck_new"
            android:layout_margin="10dp"
            android:gravity="center"
            android:elevation="2dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CREATE"
                android:textAllCaps="false"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:gravity="center"/>
        </LinearLayout>
        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/loading"
            style="@style/SpinKitView.Circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/white"
            android:layout_margin="5dp"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>