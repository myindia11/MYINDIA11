<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MenuBarLayouts.Wallet"
    android:orientation="vertical"
    android:background="@color/white">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center_vertical"
        android:id="@+id/toolbarabout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_strip"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_ios_new_24_white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:fontFamily="@font/open_sans"
            android:layout_gravity="center"/>
        <ImageView
            android:id="@+id/notification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notification"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"/>
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/add_bank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="Add Bank Details"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        android:fontFamily="@font/open_sans_semibold"
        android:drawableEnd="@drawable/ic_baseline_add_box_24"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            android:elevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bank_card_bck">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp">
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:src="@drawable/electronic_chip"
                        android:layout_gravity="center|start"
                        android:scaleType="fitXY"/>
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:src="@drawable/myindia_11_full_logo"
                        android:layout_gravity="center|end"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/ac_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/open_sans_bold"
                    android:text="Account Number"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Name"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/ifsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFSC"
                    android:textSize="15sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp"/>
                <TextView
                    android:id="@+id/holder_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Holder Name"
                    android:textSize="13sp"
                    android:fontFamily="@font/open_sans"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TableRow
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_column="1"
                            android:layout_weight="1">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bank_card_bck">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_baseline_money_24"
                                    android:layout_gravity="center"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total Balance"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/open_sans"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/total"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rs. 0"
                                            android:layout_gravity="center"
                                            android:textSize="25sp"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/open_sans_semibold"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Winning + Added"
                                    android:layout_gravity="bottom|center"
                                    android:textSize="10sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/open_sans"
                                    android:layout_marginBottom="4dp"/>

                            </FrameLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_column="2"
                            android:layout_weight="1">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bank_card_bck">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_baseline_attach_money_24"
                                    android:layout_gravity="center"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Added Balance"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/open_sans"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/added"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rs. 0"
                                            android:layout_gravity="center"
                                            android:textSize="25sp"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/open_sans_semibold" />
                                    </LinearLayout>

                                </LinearLayout>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unutilized"
                                    android:layout_gravity="bottom|center"
                                    android:textSize="10sp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/open_sans"
                                    android:layout_marginBottom="4dp"/>
                                <ImageView
                                    android:id="@+id/add_m"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="bottom|end"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginBottom="4dp"
                                    android:src="@drawable/ic_baseline_add_circle_24"/>
                            </FrameLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">
                    <TableRow
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_column="1"
                            android:layout_weight="1">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bank_card_bck">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_baseline_money_24"
                                    android:layout_gravity="center"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Bonus Balance"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/open_sans"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/bonus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rs. 0"
                                            android:layout_gravity="center"
                                            android:textSize="25sp"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/open_sans_semibold"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>


                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="5dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_column="2"
                            android:layout_weight="1">
                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/bank_card_bck">
                                <ImageView
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/ic_baseline_account_balance_24"
                                    android:layout_gravity="center"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Winning Balance"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="8dp"
                                        android:textSize="12sp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/open_sans"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/winning"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rs. 0"
                                            android:layout_gravity="center"
                                            android:textSize="25sp"
                                            android:textColor="@color/white"
                                            android:fontFamily="@font/open_sans_semibold" />
                                    </LinearLayout>
                                </LinearLayout>
                            </FrameLayout>


                        </androidx.cardview.widget.CardView>
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_back"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/atm"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/withdraw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Withdraw Money"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to withdraw amount"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_light"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp">
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_back"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/apple"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/walletHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet History"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click to see the transaction history"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/open_sans_light"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/add"
                android:layout_width="220dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_bck_new"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Money"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/open_sans_semibold"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>